{
	"name": "svelte-reactive-bloc",
	"version": "0.0.1",
	"description": " Bloc.js provides a powerful and flexible way to manage state and events in your JavaScript applications. With its reactive architecture, support for multiple subscriptions, auto-execution options, and event abort capabilities, Bloc.js is designed to streamline complex state management and asynchronous workflows. ",
	"author": "Artin Zarghami dev.zarghami@gmail.com",
	"license": "MIT",
	"publishConfig": {
		"registry": "https://registry.npmjs.org/"
	},
	"keywords": [
		"reactivity",
		"rxjs",
		"bloc-pattern",
		"state-management",
		"event-driven",
		"dispatch-system",
		"svelte",
		"dynamic-events",
		"observable",
		"svelte-kit",
		"reactive-programming",
		"rxjs-bloc",
		"component-logic",
		"svelte-bloc",
		"event-handling"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"publint": "^0.2.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^5.4.11"
	},
	"dependencies": {
		"rxjs": "^7.8.1"
	},
	"engines": {
		"node": ">=16.0.0"
	}
}
